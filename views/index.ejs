<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Random generators by Matthew Gruman</title>
 <style>

body * {
  font-family: Helvetica, Arial, sans-serif;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  color: #111;
  font-size: 1.2rem;
}

h2 {
  margin-bottom: 1rem;
  font-size: 1.5rem;
  margin-top: 1rem;
}

.container {
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
  padding: 1rem;
  min-height: 100vh;
  flex-direction: column
}

input[type=text] {
  font-size: 1.2rem;
  border: 1px solid #ccc;
  padding: 0.5rem;
  margin-bottom: 1rem;
  border-radius: 0.5rem;
  width: 100%;
}

label {
  display: block;
  margin-bottom: 0.25rem;
}

li {
  list-style-type: none;
}
  h1 {
    font-size: 2rem;
    margin-bottom: 0.25 rem;
  }


 </style>
</head>
<body>
  <div class="container">
  <h1>Random Generators</h1>
    <p style="margin-bottom: 2rem;">by <a href="https://gruman.co">Matthew Gruman</a></p>
  <div class="list">
    <% endpoints.forEach(endpoint => { %>
      <h2><%= endpoint.name %>:</h2>
      <ul>
        <% endpoint.endpoints.forEach(end => { %>
          <li><label><%= end.label %>:</label>
          <input type="text" value="<%= end.url %>" /></li>
        <% }); %></ul></li>
    <% }); %>
  </ul>
</div>
</body>
</html>